{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "lib",
    "baseUrl": ".",
    "paths": {
      "@blogster/core": ["../core/src"],
      "~core/*": ["src/core/*"],
      "~shared/*": ["src/shared/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["lib/**/*.ts"],
  "references": [{ "path": "../core" }]
}
